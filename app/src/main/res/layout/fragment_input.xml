<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:id="@+id/home"
android:background="#ff9a9a9a"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true"
tools:context="com.cyros.phelios.katathli.HomeActivity$InputFragment">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/flashNotification"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="229dp"
    android:layout_gravity="right"
    android:layout_weight="1.11">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I&apos;m Happy"
        android:id="@+id/happyButton"
        android:layout_below="@+id/sadButton"
        android:layout_alignRight="@+id/sadButton"
        android:layout_alignEnd="@+id/sadButton"
        android:layout_marginTop="50dp"
        android:onClick="onHappyButtonClicked"
        android:layout_gravity="center"
        android:background="#ff00abc8"
        android:backgroundTint="#ff7feaff"
        android:backgroundTintMode="src_over" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I&apos;m Sad"
        android:id="@+id/sadButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="#adc2000a"
        android:longClickable="false"
        android:onClick="onSadButtonClicked"
        android:layout_gravity="center_horizontal|top" />

</FrameLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Any Special Event?"
        android:id="@+id/EventString"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="false"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventNote"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendStatus"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSendEventButtonClicked" />

</RelativeLayout>
</LinearLayout>

